<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#8a070707"
        android:padding="30dp"
        tools:ignore="MissingConstraints">

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            >
        </Button>

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/menu"
            android:layout_marginRight="10dp">
        </Button>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8a070707"
        android:orientation="vertical"
        android:layout_marginTop="300dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:src="@drawable/stars"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="20dp">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abraham Lake Banff National Park"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="sans-serif-black"
            android:layout_marginLeft="40dp">
        </TextView>

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Abraham Lake, also known as Lake Abraham, is an artificial lake and Alberta's largest reservoir. It is located in the 'Kootenay Plains area of the Canadian Rockies' front range' on the North Saskatchewan River in western Alberta, Canada."
            android:textColor="@color/white"
            android:textSize="15dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/thumb1"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp">
            </ImageView>
            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/thumb2"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp">
            </ImageView>color
            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/thumb3"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp">
            </ImageView>
            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/thumb4"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp">
            </ImageView>
            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/thumb5"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp">
            </ImageView>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/button"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_marginLeft="35dp"
                android:background="@drawable/purple"
                android:text="Let's go"
                android:textColor="@color/black"
                android:textSize="14dp"></Button>

            <Button
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@color/black"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:text="âž”"
                android:textSize="25dp"
                android:textColor="@color/black">
            </Button>
            
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>